{
  "name": "Contact",
  "base": "GemBase",
  "idInjection": true,
  "options": {
    "mysql": {
      "table": "PerPersonContact"
    }
  },
  "properties": {
    "type": {
      "type": "string",
      "required": true,
      "description": "Can be something like mobile phone, work phone, fax, facebook etc."
    },
    "value": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "person": {
      "type": "belongsTo",
      "model": "Person"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "root",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "pastor",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "deacon",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    }
  ],
  "methods": []
}

{
  "name": "TextFolder",
  "base": "GemBase",
  "idInjection": true,
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "parentId": {
      "type": "number"
    },
    "ownerId": {
      "type": "number"
    }
  },
  "validations": [],
  "relations": {
    "parent": {
      "type": "belongsTo",
      "model": "TextFolder",
      "foreignKey": "parentId"
    },
    "item": {
      "type": "hasMany",
      "model": "Text",
      "foreignKey": "folderId"
    },
    "children": {
      "type": "hasMany",
      "model": "TextFolder",
      "foreignKey": "parentId"
    },
    "owner": {
      "type": "belongsTo",
      "model": "Account",
      "foreignKey": "ownerId"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "*"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    }
  ],
  "methods": []
}

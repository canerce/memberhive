{
  "name": "Person",
  "plural": "Persons",
  "base": "GemBase",
  "idInjection": true,
  "properties": {
    "firstName": {
      "type": "string",
      "required": true,
      "queryBuilder": {
        "label": "First Name"
      }
    },
    "middleName": {
      "type": "string",
      "queryBuilder": {
        "label": "Middle Name"
      }
    },
    "lastName": {
      "type": "string",
      "required": true,
      "queryBuilder": {
        "label": "Last Name"
      }
    },
    "nickName": {
      "type": "string",
      "queryBuilder": {
        "label": "Nick Name"
      }
    },
    "prefix": {
      "type": "string",
      "queryBuilder": {
        "label": "Prefix"
      }
    },
    "suffix": {
      "type": "string",
      "queryBuilder": {
        "label": "Suffix"
      }
    },
    "gender": {
      "type": "string",
      "queryBuilder": {
        "label": "Gender",
        "input": "radio",
        "values": {"m": "Male", "f": "Female"}
      }
    },
    "birthdate": {
      "type": "date",
      "queryBuilder": {
        "label": "Birthdate"
      }
    },
    "baptismDate": {
      "type": "date",
      "queryBuilder": {
        "label": "Baptism Date"
      }
    },
    "duties": {
      "type": "string"
    },
    "email": {
      "type": "string",
      "queryBuilder": {
        "label": "Email"
      }
    },
    "contact": {
      "type": "object"
    },
    "address" : {
      "type": "object"
    },
    "tags": {
     "type": "array"
    },
    "status": {
      "type": "array"
    },
    "primaryContact": {
      "type": "string",
      "enum": [
        "email",
        "mobile",
        "postal"
      ],
      "queryBuilder": {
        "label": "Primary Contact",
        "input": "select",
        "values": {"email": "Email", "mobile": "Mobile", "postal": "Postal"}
      }
    },
    "hasAvatar": {
      "type": "boolean",
      "queryBuilder": {
        "label": "Has Profile Picture",
        "input": "radio",
        "values": {"false": "No", "true": "Yes"}
      }
    }
  },
  "validations": [],
  "relations": {
    "account": {
      "type": "hasOne",
      "model": "Account"
    },
    "household": {
      "type": "belongsTo",
      "model": "Household"
    },
    "relationType": {
      "type": "belongsTo",
      "model": "RelationType"
    },
    "ministries": {
      "type": "referencesMany",
      "model": "Ministry",
      "property": "ministriesIds",
      "options": {
        "validate": true,
        "forceId": false
      }
    },
    "notes": {
      "type": "hasMany",
      "model": "Note",
      "polymorphic": "notable"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "root",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "pastor",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "deacon",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    }
  ],
  "methods": []
}

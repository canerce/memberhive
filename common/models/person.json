{
  "name": "Person",
  "plural": "Persons",
  "base": "GemBase",
  "idInjection": true,
  "options": {
    "mysql": {
      "table": "PerPerson"
    }
  },
  "properties": {
    "firstName": {
      "type": "string",
      "required": true
    },
    "middleName": {
      "type": "string"
    },
    "lastName": {
      "type": "string",
      "required": true
    },
    "nickName": {
      "type": "string"
    },
    "prefix": {
      "type": "string"
    },
    "suffix": {
      "type": "string"
    },
    "gender": {
      "type": "string"
    },
    "birthdate": {
      "type": "date"
    },
    "email": {
      "type": "string"
    },
    "primaryContact": {
      "type": "string",
      "enum": [
        "email",
        "mobile",
        "postal"
      ]
    },
    "hasAvatar": {
      "type": "boolean"
    }
  },
  "validations": [],
  "relations": {
    "contacts": {
      "type": "hasMany",
      "model": "Contact"
    },
    "account": {
      "type": "hasOne",
      "model": "Account"
    },
    "household": {
      "type": "belongsTo",
      "model": "Household"
    },
    "relationType": {
      "type": "belongsTo",
      "model": "RelationType"
    },
    "ministries": {
      "type": "hasMany",
      "model": "Ministry",
      "foreignKey": "personId",
      "through": "PersonMinistry"
    },
    "addresses": {
      "type": "hasMany",
      "model": "Address",
      "foreignKey": "personId",
      "through": "PersonAddress"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "root",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "pastor",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "deacon",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    }
  ],
  "methods": []
}

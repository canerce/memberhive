{
  "name": "Address",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "mysql": {
      "table": "CorAddress"
    }
  },
  "properties": {
    "street1": {
      "type": "string"
    },
    "street2": {
      "type": "string"
    },
    "city": {
      "type": "string"
    },
    "zipcode": {
      "type": "string"
    },
    "country": {
      "type": "string",
      "description": "ISO-3166 country code (2 letters"
    },
    "additional": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "description": "ENUM(home, postal, work, org)",
      "default": "home",
      "enum": [
        "home",
        "postal",
        "work",
        "org"
      ]
    },
    "geo": {
      "type": "geopoint"
    }
  },
  "validations": [],
  "relations": {
    "households": {
      "type": "hasMany",
      "model": "Household",
      "foreignKey": ""
    },
    "persons": {
      "type": "hasMany",
      "model": "Person",
      "foreignKey": "personId",
      "through": "PersonAddress"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "root",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "pastor",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "deacon",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    }
  ],
  "methods": []
}
